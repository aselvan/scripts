<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">

<!--
  File: com.selvansoft.locate-updatedb.plist
  Author: Arul Selvan
  Version: Jan 27, 2026
  Description: task to run locate.updatedb to build the locate database every night 
-->

<dict>
  <key>Label</key>
  <string>com.selvansoft.locate-updatedb</string>

  <key>ProgramArguments</key>
  <array>
    <string>/Users/arul/src/scripts.github/macos/locate_updatedb.sh</string>
  </array>

  <key>EnvironmentVariables</key>
    <dict>
      <key>PATH</key>
      <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin:/sbin:/usr/sbin</string>
      <key>HOME</key>
      <string>/Users/arul</string>
      <key>SCRIPTS_GITHUB</key>
      <string>/Users/arul/src/scripts.github</string>
  </dict>

  <!-- locate.updatedb to run 12:01am everyday -->
  <key>StartCalendarInterval</key>
  <array>
    <dict>
      <key>Hour</key>
      <integer>12</integer>
      <key>Minute</key>
      <integer>1</integer>
    </dict>
  </array>

  <key>StandardOutPath</key>
  <string>/tmp/com.selvansoft.locate-updatedb.stdout.log</string>
  <key>StandardErrorPath</key>
  <string>/tmp/com.selvansoft.locate-updatedb.stderr.log</string>

  <key>RunAtLoad</key>
    <true/>
  <key>AbandonProcessGroup</key>
    <true/>
</dict>
</plist>


